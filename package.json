{
  "name": "farrow-auth",
  "version": "0.0.0",
  "description": "A flexible and decoupled authentication middleware for Farrow framework",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "prebuild": "pnpm clean",
    "prepublishOnly": "pnpm build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "prepare": "husky",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "keywords": [
    "farrow",
    "auth",
    "authentication",
    "session",
    "middleware",
    "cookie",
    "jwt",
    "typescript"
  ],
  "author": "Aison",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/cookies": "^0.9.0",
    "@types/node": "^22.18.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@vitest/ui": "^3.2.4",
    "commitizen": "^4.3.1",
    "conventional-changelog": "^6.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-dts": "^6.1.1",
    "standard-version": "^9.5.0",
    "supertest": "^7.1.4",
    "tslib": "^2.8.1",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "farrow-http": "^2.3.1",
    "farrow-pipeline": "^2.3.0",
    "ulid": "^2.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/AisonSu/farrow-auth#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AisonSu/farrow-auth.git"
  },
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b"
}
